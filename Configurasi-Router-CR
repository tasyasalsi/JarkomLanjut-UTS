! Konfigurasi Interface
interface GigabitEthernet0/0
   ip address 192.168.10.1 255.255.255.0
   no shutdown

interface GigabitEthernet0/1
   ip address 203.0.113.10 255.255.255.252
   no shutdown

! Routing dan NAT
ip route 0.0.0.0 0.0.0.0 203.0.113.9 
ip nat inside source list 1 interface GigabitEthernet0/1 overload

! Konfigurasi VPN ke Kampus KHI dan KJ
crypto isakmp policy 10
   encryption aes
   hash sha256
   authentication pre-share
   group 2
crypto isakmp key c0nnectUniv address 198.51.100.10 
crypto isakmp key c0nnectUniv address 198.51.100.20 

crypto ipsec transform-set VPN-SET esp-aes esp-sha-hmac
crypto map VPN-MAP 10 ipsec-isakmp
   set peer 198.51.100.10
   set transform-set VPN-SET
   match address 100
crypto map VPN-MAP 20 ipsec-isakmp
   set peer 198.51.100.20
   set transform-set VPN-SET
   match address 100

interface GigabitEthernet0/1
   crypto map VPN-MAP

access-list 1 permit 192.168.10.0 0.0.0.255
access-list 100 permit ip 192.168.10.0 0.0.0.255 192.168.20.0 0.0.0.255
access-list 100 permit ip 192.168.10.0 0.0.0.255 192.168.30.0 0.0.0.255
